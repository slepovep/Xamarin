<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
          x:Class="parusapp.Views.Cells.IncomingViewCell">
       <Frame BackgroundColor="LightBlue"
              Rotation="180"
              FlowDirection="LeftToRight"
              Padding="10,2,10,2"
              HasShadow="false"
              Margin="10,10,80,10">
		 <StackLayout>
			<Label Text="{Binding User}" HorizontalOptions="End" VerticalOptions="EndAndExpand" FontAttributes="Italic" FontSize= "Micro" TextColor="#ffffb3"/>
		    <Label Text="{Binding Text}"/>
			<Label Text="{Binding Reg_date}" HorizontalOptions="End" VerticalOptions="EndAndExpand" FontAttributes="Italic" FontSize= "Micro" TextColor="#ffffb3"/>
		</StackLayout>
	   </Frame>
</ViewCell>
